@model SystemPurchaseAccGame.ViewModel.NeedTopupVm

<div class="acc_detail_pay_modal" data-open="true" aria-hidden="false" role="dialog">
    <div class="acc_detail_pay_modalCard">
        <div class="acc_detail_pay_modalTop">
            <div class="acc_detail_pay_modalTitle">Số dư không đủ</div>
            <button class="acc_detail_pay_modalClose js-close-modal" type="button" aria-label="Đóng">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>

        <div class="p-3">
            <div class="mb-2"><strong>@Model.Title</strong></div>
            <div class="mb-1">Giá: <strong>@Model.Price.ToString("N0") VNĐ</strong></div>
            <div class="mb-1">Số dư ví: <strong>@Model.Balance.ToString("N0") VNĐ</strong></div>
            <div class="mb-3">Cần nạp thêm: <strong>@Model.NeedMore.ToString("N0") VNĐ</strong></div>

            <div class="border rounded-4 p-3 text-center">
                <div class="fw-bold mb-2">Quét QR để nạp tiền</div>

                @if (!string.IsNullOrWhiteSpace(Model.QrImageUrl))
                {
                    <img src="@Model.QrImageUrl" alt="QR nạp tiền" style="max-width:260px;width:100%;height:auto;" />
                }

                @if (!string.IsNullOrWhiteSpace(Model.TopupNote))
                {
                    <div class="text-muted small mt-2">Nội dung chuyển khoản:</div>
                    <div class="fw-bold">@Model.TopupNote</div>
                }
            </div>

            <div class="d-flex gap-2 justify-content-end mt-3">
                <button class="acc_detail_pay_btn acc_detail_pay_btnGhost js-close-modal" type="button">Đóng</button>
                <a class="acc_detail_pay_btn acc_detail_pay_btnPrimary" href="/home/wallet">Đi tới ví</a>
            </div>
        </div>
    </div>
</div>