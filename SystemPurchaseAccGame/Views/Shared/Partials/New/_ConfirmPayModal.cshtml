@model SystemPurchaseAccGame.ViewModel.ConfirmPayVm

<div class="acc_detail_pay_modal" data-open="true" aria-hidden="false" role="dialog">
    <div class="acc_detail_pay_modalCard">
        <div class="acc_detail_pay_modalTop">
            <div class="acc_detail_pay_modalTitle">Xác nhận thanh toán</div>
            <button class="acc_detail_pay_modalClose js-close-modal" type="button" aria-label="Đóng">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>

        <div class="p-3">
            <div class="mb-2"><strong>@Model.Title</strong></div>
            <div class="mb-2">Giá: <strong>@Model.Price.ToString("N0") VNĐ</strong></div>
            <div class="mb-3">Số dư ví: <strong>@Model.Balance.ToString("N0") VNĐ</strong></div>

            <div class="d-flex gap-2 justify-content-end">
                <button class="acc_detail_pay_btn acc_detail_pay_btnGhost js-close-modal" type="button">Hủy</button>
                <button class="acc_detail_pay_btn acc_detail_pay_btnPrimary js-confirm-pay"
                        type="button"
                        data-account-id="@Model.AccountId">
                    Xác nhận thanh toán
                </button>
            </div>
        </div>
    </div>
</div>