                </div>

                <div class="chart-shell">
                    <div class="chart-grid"></div>

                    <!-- Fake line points (tĩnh) -->
                    <div class="chart-line">
                        <span class="pt" style="left: 4%; bottom: 28%"></span>
                        <span class="pt" style="left: 12%; bottom: 40%"></span>
                        <span class="pt" style="left: 20%; bottom: 35%"></span>
