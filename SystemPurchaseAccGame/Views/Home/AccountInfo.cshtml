<script>
    // Copy username/pass khi bấm icon
    (() => {
      document.addEventListener("click", async (e) => {
        const btn = e.target.closest("[data-copy-btn]");
        if (!btn) return;

        const cell = btn.closest("td");
        const span = cell?.querySelector("[data-copy]");
        const text = span?.getAttribute("data-copy") || span?.textContent || "";
        if (!text) return;

        try {
          await navigator.clipboard.writeText(text);
          btn.innerHTML = '<i class="fa-solid fa-check"></i>';
          setTimeout(() => (btn.innerHTML = '<i class="fa-regular fa-copy"></i>'), 800);
        } catch {
          alert("Không copy được. Trình duyệt không cho phép.");
        }
      });
    })();
</script>
<script>
    // Copy tất cả acc/pass (mỗi dòng: user/pass)
    (() => {
      const btn = document.getElementById("btnCopyAllCred");
      if (!btn) return;

      btn.addEventListener("click", async () => {
        const rows = Array.from(document.querySelectorAll("#recentBoughtTable tbody tr"));

        const lines = [];
        for (const tr of rows) {
          const uEl = tr.querySelector("[data-user]");
          const pEl = tr.querySelector("[data-pass]");
          if (!uEl || !pEl) continue;

          const user = uEl.getAttribute("data-user") || uEl.textContent || "";
          const pass = pEl.getAttribute("data-pass") || pEl.textContent || "";
          if (!user && !pass) continue;

          lines.push(`${user}/${pass}`);
        }

        if (lines.length === 0) {
          alert("Không có dữ liệu acc/pass để copy.");
          return;
        }

        const text = lines.join("\n");

        try {
          await navigator.clipboard.writeText(text);
          const old = btn.innerHTML;
          btn.innerHTML = '<i class="fa-solid fa-check"></i> Đã copy';
          setTimeout(() => (btn.innerHTML = old), 900);
        } catch {
          // fallback nếu clipboard bị chặn
          const ta = document.createElement("textarea");
          ta.value = text;
          ta.style.position = "fixed";
          ta.style.left = "-9999px";
          document.body.appendChild(ta);
          ta.select();
          try {
            document.execCommand("copy");
            alert("Đã copy (fallback).");
          } catch {
            alert("Không copy được. Trình duyệt không cho phép.");
          }
          document.body.removeChild(ta);
        }
      });
    })();
</script>
<script>
    (() => {
      const gift = document.getElementById("floatingGift");
      if(!gift) return;

      // hiện sau 600ms cho mượt
      setTimeout(() => {
        gift.style.display = "grid";
      }, 600);

      // click để ẩn
      gift.addEventListener("click", () => {
        gift.style.display = "none";
      });
    })();
</script>