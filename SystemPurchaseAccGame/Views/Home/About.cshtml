@model SystemPurchaseAccGame.ViewModel.UserProfileDto
@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<main class="user_simple_main">
    <section class="user_simple_card" aria-label="Thông tin user">
        <h2 class="user_simple_title">Thông tin tài khoản</h2>

        <div class="user_simple_grid">
            <div class="user_simple_row">
                <div class="k">ID</div>
                <div class="v">@Model.UserId</div>
            </div>

            <div class="user_simple_row">
                <div class="k">Username</div>
                <div class="v">@Model.Username</div>
            </div>

            <div class="user_simple_row">
                <div class="k">FullName</div>
                <div class="v">@Model.FullName</div>
            </div>

            <div class="user_simple_row">
                <div class="k">Email</div>
                <div class="v">@Model.Email</div>
            </div>

            <div class="user_simple_row">
                <div class="k">Phone</div>
                <div class="v">@Model.Phone</div>
            </div>

            

            <div class="user_simple_row">
                <div class="k">CreatedAt</div>
                <div class="v">@Model.CreatedAt</div>
            </div>

            <div class="user_simple_row">
                <div class="k">Role</div>
                <div class="v">@Model.Role</div>
            </div>
        </div>

        <div class="user_simple_actions">
            <a class="btn" href="javascript:history.back()">Quay lại</a>
        </div>
    </section>
</main>

<style>
    .user_simple_main {
        max-width: 900px;
        margin: 18px auto;
        padding: 0 16px;
    }

    .user_simple_card {
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(17,24,39,.72);
        padding: 14px;
    }

    .user_simple_title {
        margin: 0 0 12px;
        font-size: 16px;
    }

    .user_simple_grid {
        display: grid;
        gap: 10px;
    }

    .user_simple_row {
        display: grid;
        grid-template-columns: 160px 1fr;
        gap: 12px;
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,.08);
        background: rgba(255,255,255,.04);
    }
    .k {
        opacity: .75;
        font-size: 13px;
    }

    .v {
        font-weight: 600;
        word-break: break-word;
    }

    .user_simple_actions {
        margin-top: 12px;
        display: flex;
        justify-content: flex-end;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 9px 12px;
        border-radius: 10px;
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(255,255,255,.06);
        color: inherit;
        text-decoration: none;
    }

        .btn:hover {
            background: rgba(255,255,255,.10);
        }
</style>
